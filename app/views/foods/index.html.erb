<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Food</th>
      <th>Calories</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= link_to 'Show', user_food_path(@user, food.id), class: "btn-xs btn-info" %></td>
        <td><%= link_to 'Edit', edit_user_food_path(@user, food.id), class: "btn-xs btn-success" %></td>
        <td><%= link_to 'Destroy', user_food_path(@user, food.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Food Search", new_user_food_path(current_user), class: "btn-sm btn-info" %>

<br>
